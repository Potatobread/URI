#include <stdio.h>

int main(){
	int n,x,y;
	
	scanf("%d", &n);
	while(n != 0){
		scanf("%d %d", &x,&y);
		if(x % 2 == 0){
			x++;
			while(y != 0){
				x += x+2;
				y--;
			}
			printf("%d\n", x);
		}
		else{
			while(y != 0){
				x += x+2;
				y--;
			}
			printf("%d\n", x);
		}
		n--;
	}

	return 0;
}
